<div class="form-container">
    <h1><%= title %></h1>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    <%- messages() %>
    <form action="/inv/delete" method="post" id="deleteForm">
        <p>Confirm Deletion - The delete is permanent.</p>
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required readonly value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>">
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required readonly value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>">
        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" required readonly value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>">
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" required readonly value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
        <button type="submit">Delete Vehicle</button>
    </form>
</div>

